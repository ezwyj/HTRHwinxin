                                        </a>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div><!-- tab about -->
                    <!-- ===== Third Tab ===== -->
                    <div class="tab-pane" id="portfolio">
                        <div class="row">
                            <img src="@qrfile" width="100%">
                        </div>
                        <!-- row -->
                    </div><!-- /Tab Portfolio -->

                </div><!-- Tab Content -->
            </div><!-- col-md-8 -->
        </div><!-- row w -->
    </div><!-- col-lg-6 -->
